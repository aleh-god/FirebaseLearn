<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_fragment"
    >

    <fragment
        android:id="@+id/main_fragment"
        android:name="by.godevelopment.firebaselearn.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_fragment"
        >
        <action
            android:id="@+id/action_main_fragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_main_fragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="by.godevelopment.firebaselearn.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment"
        >
        <action
            android:id="@+id/action_homeFragment_to_main_fragment"
            app:destination="@id/main_fragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="by.godevelopment.firebaselearn.ui.register.RegisterFragment"
        android:label="Register user"
        tools:layout="@layout/register_fragment"
        >
        <action
            android:id="@+id/action_registerFragment_to_main_fragment"
            app:destination="@id/main_fragment" />
    </fragment>
</navigation>